<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <property name="CANAL_HOME" value="." />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <appender name="CANAL-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CANAL_HOME}/logs/canal/canal.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${CANAL_HOME}/logs/canal/canal.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <logger name="com.alibaba.otter" level="INFO" additivity="false">
        <appender-ref ref="CANAL-LOG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.apache" level="WARN" additivity="false">
        <appender-ref ref="CANAL-LOG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="CANAL-LOG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="CANAL-LOG" />
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="WARN">
        <appender-ref ref="CANAL-LOG" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>