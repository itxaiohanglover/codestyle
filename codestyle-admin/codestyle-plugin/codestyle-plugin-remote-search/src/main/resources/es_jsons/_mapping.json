{
  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 1,
    "analysis": {
      "tokenizer": {
        "pinyin_tokenizer": {
          "type": "pinyin",
          "keep_full_pinyin": true,
          "keep_joined_full_pinyin": true,
          "keep_original": false,
          "keep_none_chinese": true,
          "lowercase": true,
          "trim_whitespace": true
        }
      },
      "analyzer": {
        "pinyin_analyzer": {
          "tokenizer": "pinyin_tokenizer"
        }
      }
    }
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "id": {
        "type": "long",
        "index": false,
        "doc_values": false
      },
      "groupId": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "artifactId": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "description": {
        "type": "text",
        "fields": {
          "semantic": {
            "type": "semantic_text",
            "inference_id": ".multilingual-e5-small-elasticsearch"
          },
          "text": {
            "type": "text",
            "analyzer": "pinyin_analyzer"
          }
        }
      },
      "config": {
        "type": "object",
        "enabled": true,
        "dynamic": false
      }
    }
  }
}
