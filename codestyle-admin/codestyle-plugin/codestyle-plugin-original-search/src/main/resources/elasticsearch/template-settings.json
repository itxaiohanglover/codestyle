{
  "settings": {
    "number_of_shards": 5,
    "number_of_replicas": 1,
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "cn_en_index": {
          "tokenizer": "ik_max_word",
          "filter": [
            "lowercase",
            "pinyin_filter",
            "word_delimiter_filter"
          ]
        },
        "cn_en_search": {
          "tokenizer": "ik_smart",
          "filter": [
            "lowercase",
            "pinyin_filter",
            "word_delimiter_filter"
          ]
        },
        "en_std": {
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      },
      "filter": {
        "pinyin_filter": {
          "type": "pinyin",
          "keep_first_letter": true,
          "keep_separate_first_letter": false,
          "keep_full_pinyin": true,
          "limit_first_letter_length": 16,
          "remove_duplicated_term": true
        },
        "word_delimiter_filter": {
          "type": "word_delimiter",
          "generate_word_parts": true,
          "generate_number_parts": true,
          "catenate_words": false,
          "catenate_numbers": false,
          "catenate_all": false,
          "split_on_case_change": true,
          "preserve_original": true
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "nameCh": {
        "type": "text",
        "analyzer": "cn_en_index",
        "search_analyzer": "cn_en_search"
      },
      "nameEn": {
        "type": "text",
        "analyzer": "en_std",
        "search_analyzer": "en_std"
      },
      "description": {
        "type": "text",
        "analyzer": "cn_en_index",
        "search_analyzer": "cn_en_search"
      },
      "searchTags": {
        "type": "text",
        "analyzer": "cn_en_index",
        "search_analyzer": "cn_en_search",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "version":   { "type": "keyword" },
      "avatar":    { "type": "keyword" },
      "category":  { "type": "keyword" },
      "memberNames": { "type": "keyword" },
      "memberAvatarUrls": { "type": "keyword" },
      "creatorId":   { "type": "keyword" },
      "creatorName": { "type": "keyword" },
      "memberIds":   { "type": "keyword" },
      "isPrivate": { "type": "integer" },
      "totalFileSize": { "type": "long" },
      "totalFileCount": { "type": "long" },
      "totalMemberCount": { "type": "long" },
      "totalLikeCount": { "type": "long" },
      "totalFavoriteCount": { "type": "long" },
      "createTime": { "type": "date" },
      "updateTime": { "type": "date" },
      "editTime":   { "type": "date" },
      "isDelete": { "type": "integer" },
      "hotScoreWeight": { "type": "double" }
    }
  }
}
